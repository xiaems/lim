{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true, 
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@screens/*": ["src/screens/*"],
      "@theme/*": ["src/themes/*"],
      "@style/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@commonComponent/*": ["src/commonComponent/*"],
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@App": ["App"] 
    },
    "moduleResolution": "node"
  }
}
